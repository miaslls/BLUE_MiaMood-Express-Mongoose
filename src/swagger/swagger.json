{
  "openapi": "3.0.0",
  "info": {
    "title": "MiaLogs API",
    "description": "description",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3001/",
      "description": "INTERNAL - testing"
    }
  ],
  "paths": {
    "/auth": {
      "post": {
        "summary": "login auth",
        "description": "validate login through username and password",
        "operationId": "login",
        "tags": ["Auth"],
        "requestBody": {
          "description": "username and password",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                }
              },
              "example": {
                "username": "sampleuser",
                "password": "123456"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/users": {
      "get": {
        "summary": "get ALL users",
        "description": "returns a list of all users in DB",
        "operationId": "getAllUsers",
        "tags": ["Users"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "summary": "create NEW user",
        "description": "creates new user in DB from body",
        "operationId": "createUser",
        "tags": ["Users"],
        "requestBody": {
          "description": "new user body",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "example": {
                "username": "sampleuser",
                "password": "123456"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/moods": {
      "get": {
        "summary": "get ALL moods",
        "description": "returns a list of all moods in DB",
        "operationId": "getAllMoods",
        "tags": ["Moods"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "summary": "create NEW mood",
        "description": "creates new mood in DB from body",
        "operationId": "createMood",
        "tags": ["Moods"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "description": "new mood body",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Mood"
              },
              "example": {
                "type": "2",
                "icon": "‚≠ê",
                "text": "sampleText",
                "dateTime": "2022-04-23T05:35"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/moods/search": {
      "get": {
        "summary": "search moods",
        "description": "returns a list of all moods containing query",
        "operationId": "searchMoods",
        "tags": ["Moods"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "required": true,
            "description": "text",
            "schema": {
              "type": "string",
              "example": "sample"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/moods/date": {
      "get": {
        "summary": "get mood BY DATE",
        "description": "returns a list of all moods from corresponding date",
        "operationId": "getMoodsByDate",
        "tags": ["Moods"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "year",
            "in": "query",
            "required": true,
            "description": "4-digit year",
            "schema": {
              "type": "string",
              "example": "2022"
            }
          },
          {
            "name": "month",
            "in": "query",
            "required": true,
            "description": "2-digit month",
            "schema": {
              "type": "string",
              "example": "07"
            }
          },
          {
            "name": "day",
            "in": "query",
            "required": true,
            "description": "2 digit-day",
            "schema": {
              "type": "string",
              "example": "16"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/moods/date/today": {
      "get": {
        "summary": "get TODAY moods",
        "description": "returns a list of all moods created TODAY",
        "operationId": "getTodayMoods",
        "tags": ["Moods"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/moods/id/{id}": {
      "get": {
        "summary": "get mood BY ID",
        "description": "returns object with corresponding ID from DB",
        "operationId": "getMoodById",
        "tags": ["Moods"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the mood to get, 24 character hexadecimal",
            "schema": {
              "type": "string",
              "example": "62d2771ab6a7bc594a1983f8"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/moods/update/{id}": {
      "put": {
        "summary": "update mood BY ID",
        "description": "updates mood with corresponding ID in DB from body",
        "operationId": "updateMood",
        "tags": ["Moods"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the mood to update, 24 character hexadecimal",
            "schema": {
              "type": "string",
              "example": "62d29c19d0b2160cce3ae915"
            }
          }
        ],
        "requestBody": {
          "description": "mood body",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Mood"
              },
              "example": {
                "type": "3",
                "icon": "üòâ",
                "text": "updated",
                "dateTime": "2022-07-13T02:10"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/moods/delete/{id}": {
      "delete": {
        "summary": "delete mood BY ID",
        "description": "deletes mood with corresponding ID from DB",
        "operationId": "deleteMood",
        "tags": ["Moods"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the mood to delete, 24 character hexadecimal",
            "schema": {
              "type": "string",
              "example": "62d29c19d0b2160cce3ae915"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "username": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "Mood": {
        "type": "object",
        "properties": {
          "type": { "type": "number" },
          "icon": { "type": "string" },
          "text": { "type": "string" },
          "dateTime": { "type": "string" }
        }
      }
    }
  }
}
